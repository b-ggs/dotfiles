// vim: syntax=jsonc
{
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "javascript",
    "typescript",
    "svelte",
    "html",
    "css",
    "scss"
  ],
  // Open jumps in vertical split
  "coc.preferences.jumpCommand": "vsplit",
  // Border configs. TODO: look into winblend
  // Winblend works pretty well with :set termguicolors
  // Maybe it's time to move away from strictly using 16 colors?
  "suggest.floatConfig": {
    "border": true
    // "winblend": 30
  },
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true
    // "winblend": 30
  },
  "signature.floatConfig": {
    "border": true,
    "rounded": true
    // "winblend": 30
  },
  "hover.floatConfig": {
    "border": true,
    "rounded": true
    // "winblend": 30
  },
  // Python/Pyright settings
  "python.linting.flake8Enabled": false, // Enable this on a per-project basis
  "python.formatting.provider": "black",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "languageserver": {
    // Sourcery settings
    // Enable this on a per-project basis
    // "sourcery": {
    //   "command": "sourcery",
    //   "args": [
    //     "lsp"
    //   ],
    //   "filetypes": [
    //     "python"
    //   ],
    //   "initializationOptions": {
    //      "token": "",
    //      "extension_version": "coc.vim",
    //      "editor_version": "vim"
    //   },
    //   "settings": {
    //     "sourcery": {
    //       "metricsEnabled": false
    //     }
    //   }
    // }
  },
  "svelte.enable-ts-plugin": true
}
