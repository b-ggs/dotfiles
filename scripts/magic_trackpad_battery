#!/usr/bin/env bash

# magic_trackpad_battery
# @b_ggs // github.com/b-ggs/macos-sysinfo-scripts
# Returns battery level of a connected Magic Trackpad

percent=$(ioreg -c BNBTrackpadDevice | awk '/"BatteryPercent" =/ { print $NF }')

if [[ -z "$percent" ]]; then
  echo 'not available'
  exit 1
fi

echo "$percent%"
